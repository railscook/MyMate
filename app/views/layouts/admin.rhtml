<body> 
	
<% if admin_logged_in? %> 	
<!-- start container -->
<div id="container"> 
	<!-- start header -->
	<div id="header"> 
		<div id="logo">
			<h1>Admin of My Mate</h1> 
			<h2>CMS powered by Ruby on Rails</h2>
			
		</div>
		<!-- start headerlinks -->
		<div id="headerlinks"> 
				<%= link_to 'Main', :controller => 'Admin', :action => 'setting' -%> 
				<div id="break"> | </div>
				<%= link_to 'Logout', :controller => 'admin', :action => 'logout' -%>
					 <div id="break"> | </div>
		</div> 
		<!-- end headerlinks -->
				
	</div> 
	<!-- end header -->

	<div id="date"> <%= Date.today %><small> </small> </div>


	<!-- start content -->	
	<div id="content">
		<table id="contentbody">
			<tr>
				<td>
					<p style="color: green"><%= flash[:notice] %></p>
					<%= yield -%> 
				</td>
			</tr>
		</table>	
	</div> 
	<!-- end content -->
	
	<!-- start footer -->
	<div id="footer">
	<p id="legal">Powered by &copy;2007 - <%= Date.today.year %> My Mate CMS. <br/>
		All Rights Reserved. | Designed by <a 
		href="http://www.swezin.com/">Swe Zin</a></p>
	</div>
	<!-- end footer -->
</div> 
<!-- end container -->


<% else %>

<!-- **************************************************************************** -->
<!-- ********************* 	If Admin doesn't log in 	************************* -->
<!-- **************************************************************************** -->

<div id="container"> 
	<!-- start header -->
	<div id="header"> 
		<div id="logo">
			<h1>Admin of My Mate</h1> 
			<h2>CMS powered by Ruby on Rails</h2>
			
		</div>
		<!-- start headerlinks -->
		<div id="headerlinks"> 
				<%= link_to 'Main', :controller => 'Admin', :action => 'setting' -%> 
				<div id="break"> | </div>
				<%= link_to 'Login', :controller => 'admin', :action => 'signin' -%>
					 <div id="break"> | </div>
		</div> 
		<!-- end headerlinks -->
				
	</div> 
	<!-- end header -->

	<div id="date"> <%= Date.today %><small> </small> </div>


	<!-- start content -->	
	<div id="content">
		<table id="contentbody">
			<tr>
				<td>
					<p style="color: green"><%= flash[:notice] %></p>
					<font size="16">Please login</font>
					<% form_tag({:controller => 'admin', :action => 'login'}, 
					{:id => "login_form"}) do %> 
					<fieldset> 
							<label for="user_login">Login:</label> <br/>
								<%= text_field :admin, :login -%> <br/>
							<label for="user_password">Password:</label> <br/>
								<%= password_field :admin, :password -%> <br/><br/>
					  <%= submit_tag "Login >>" %>
					<% end %> 
					</fieldset> 
				</td>
			</tr>
		</table>	
	</div> 
	<!-- end content -->
	
	<!-- start footer -->
	<div id="footer">
	<p id="legal">Powered by &copy;2007 - <%= Date.today.year %> My Mate CMS. <br/>
		All Rights Reserved. | Designed by <a 
		href="http://www.swezin.com/">Swe Zin</a></p>
	</div>
	<!-- end footer -->
</div> 
<!-- end container -->
<% end %>

</body> 

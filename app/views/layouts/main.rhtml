<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> 
<html xmlns="http://www.w3.org/1999/xhtml"> 
<head> 
	<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" /> 
	<meta http-equiv="Content-Language" content="en-us" /> 
	<title>My Mate CMS - <%= controller.controller_name %> - <%= controller.action_name %> </title> 
	<%= stylesheet_link_tag "system" %> 
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "fckeditor.js" %>
<!--	<script src='http://images.del.icio.us/static/js/playtagger.js' type='text/javascript'></script> -->

</head> 

<body> 

<% if logged_in? %>

<!-- start container -->
<div id="container"> 
        <%= render :partial => "/layouts/top_menu_bar" %>
	<!-- start sidebar -->	

	<div id="sidebar"> 
	<h1> Content Management</h1><br/>
		
	<p id="sidebar1">
		<%= link_to_function("<h2> Manage Web Content </h2>", 
		"$('sub_sidebarl').toggle(); Element.hide('sub_sidebar2');  Element.hide('sub_sidebar3');
		 Element.hide('sub_sidebar4'); Element.hide('sub_sidebar5'); Element.hide('sub_sidebar6');
		  ")%></p> 
	<div id="sub_sidebarl" style="display:none;"> 
	<ul>
		<li> <%= link_to "Create a New Page", :controller => 'webpage', 
			:action => 'new' %>
		</li>
		<li> <%= link_to "Publish a Page", :controller => 'webpage', 
			:action => 'published' %>
		</li>
		<li> <%= link_to "View Site Map", :controller => 'webpage', 
			:action => 'sitemap' %>
		</li>
	</ul>
	</div>

	<p id="sidebar2">
		<%= link_to_function(" <h2>Manage Categories</h2> ", 
		"$('sub_sidebar2').toggle(); Element.hide('sub_sidebarl'); Element.hide('sub_sidebar3'); 
		 Element.hide('sub_sidebar4'); Element.hide('sub_sidebar5'); Element.hide('sub_sidebar6');
		  ")%></p> 
	<div id="sub_sidebar2" style="display:none;"> 
	<ul>
		<li> <%= link_to "Advanced Features", :controller => 'category', 
			:action => 'manage' %>
		</li>
		<li> <%= link_to "Basic Features", :controller => 'category', 
			:action => 'list' %>
		</li>
	</ul>
	</div>

	<p id="sidebar3">
		<%= link_to_function(" <h2> Manage Documents </h2> ", 
		"$('sub_sidebar3').toggle(); Element.hide('sub_sidebarl'); Element.hide('sub_sidebar2'); 
		 Element.hide('sub_sidebar4'); Element.hide('sub_sidebar5'); Element.hide('sub_sidebar6');
		")%></p> 
	<div id="sub_sidebar3" style="display:none;"> 
	<ul>
		<li> <%= link_to "Manage Web Page", :controller => 'webpage', 
			:action => 'list' %>
		</li>
		<li> <%= link_to "Manage File", :controller => 'fileclassified', :action => 'list' %>
		</li>
		<li> <%= link_to "Manage Image", :controller => 'photo', 
			:action => 'list' %>
		</li>
		<li> <%= link_to "Manage Song", :controller => 'song', :action => 'list' %>
		</li>
		<li> <%= link_to "Manage Video", :controller => 'video', :action => 'list' %>
		</li>
	</ul>
	</div>

	<p id="sidebar4">
		<%= link_to_function(" <h2> Upload Documents </h2> ", 
		"$('sub_sidebar4').toggle(); Element.hide('sub_sidebarl'); Element.hide('sub_sidebar2'); 
		 Element.hide('sub_sidebar3'); Element.hide('sub_sidebar5'); Element.hide('sub_sidebar6');
		")%></p> 
	<div id="sub_sidebar4" style="display:none;"> 
	<ul>
		<li> <%= link_to "Upload Web Page", :controller => 'webpage', 
			:action => 'upload' %>
		</li>
		<li> <%= link_to "Upload File", :controller => 'fileclassified', :action => 'new' %>
		</li>
		<li> <%= link_to "Upload Image", :controller => 'photo', 
			:action => 'new' %>
		</li>
		<li> <%= link_to "Upload Song", :controller => 'song', :action => 'new' %> </li>
		<li> <%= link_to "Upload Video", :controller => 'video', :action => 'new' %> </li>
		<li> <%= link_to 'Upload Stylesheet', :controller => 'stylesheet', :action => 'upload' %> </li>
	</ul>
	</div>

	<p id="sidebar5">
		<%= link_to_function(" <h2> Setting </h2> ", 
		"$('sub_sidebar5').toggle(); Element.hide('sub_sidebarl'); Element.hide('sub_sidebar2'); 
		 Element.hide('sub_sidebar3'); Element.hide('sub_sidebar4'); Element.hide('sub_sidebar6');
		")%></p> 
	<div id="sub_sidebar5" style="display:none;"> 
	<ul>
		<li> <%= link_to "Header Menus ", :controller => 'header' %> </li>
		<li> <%= link_to "Footer Menus ", :controller => 'footer' %> </li>
		<li> <%= link_to "Stylesheet Menus ", :controller => 'stylesheet', 
			:action => 'menu' %> </li>
		<li> <%= link_to "Create New Stylesheet", :controller => 'stylesheet', :action => 'new'%> </li>
		<li> <%= link_to "Edit/Delete Stylesheets", :controller => 'stylesheet'%> </li>
	</ul>
	</div>

	<p id="sidebar6"><%= link_to_function(" <h2> Search Features</h2> ", 
		"$('sub_sidebar6').toggle(); Element.hide('sub_sidebarl'); Element.hide('sub_sidebar2'); 
		Element.hide('sub_sidebar3'); Element.hide('sub_sidebar4'); Element.hide('sub_sidebar5'); 
		")%></p> 
	<div id="sub_sidebar6" style="display:none;"> 
	
	<ul>
		<li> <%= link_to "Search Blog", :controller => 'blog', :action => 'blog_search' %>
		</li>
		<li> <%= link_to "Search Webpage", :controller => 'webpage', :action => 'web_search' %>
		</li>
		<li> <%= link_to "Search File", :controller => 'fileclassified', 
			:action => 'file_search' %>
		</li>
		<li> <%= link_to "Search Friend ", :controller => 'friend', :action => 
			'contact_search' %> 
		</li>
		<li> <%= link_to "Search Photo", :controller => 'photo', 
			:action => 'photo_search' %>
		</li>
		<li> <%= link_to "Search Song", :controller => 'song', 
			:action => 'song_search' %>
		</li>
		<li> <%= link_to "Search Video", :controller => 'video', 
			:action => 'video_search' %>
		</li>
	</ul>
	</div>
	</div> 
	<!-- end sidebar -->
	
	<!-- start content -->	
	<div id="content">
		<table id="contentbody">
			<tr>
				<td>
					<p style="color: #666"><%= flash[:notice] %></p>
					<%= yield -%> 
				</td>
			</tr>
		</table>	
	</div> 
	<!-- end content -->
	
	<!-- start footer -->
        <div id="footer">
	<p id="legal">Powered by &copy;2007 - <%= Date.today.year %> 
                My Mate CMS. <br/>
		All Rights Reserved. | Designed by <a 
		href="http://www.swezin.com/">Swe Zin</a></p>
	</div>
	<!-- end footer -->
</div> 
<!-- end container -->

<% else %>

<!-- 
	***** if users do not log in yet, ask him or her to log in  ****
-->
	<div id="container"> 
	<!-- start header -->
	<div id="header"> 
		<div id="logo">
			<h1>My Mate</h1> 
			<h2>CMS powered by Ruby on Rails</h2> 
		</div>

			<!-- start headerlinks -->
		<div id="headerlinks"> 
			<% unless session[:user] %> 
				<%= link_to 'login', :controller => 'login', :action => 'signin' -%> 
				<div id="break"> | </div>
				<%= link_to 'register', :controller => 'login', :action => 'signup' %> 
				<div id="break"> | </div>
			<% else %> 
				<%= "Welcome #{session[:user].login}! " -%> <br/>
					<%= link_to 'View Profile', :controller => 'login', :action => 'show', 
					:login => session[:user].login -%>
					 <div id="break"> | </div>
					 <%= link_to 'View Website', :controller => 'viewer', :action => 'index', 
					:user_name => session[:user].login -%>
					 <div id="break"> | </div>
					<%= link_to 'Logout', :controller => 'login', :action => 'logout' -%>
					 <div id="break"> | </div>
			<% end %> 
				<%= link_to 'FAQ', :controller => 'cms', :action => 'faq' -%> 
		</div> 
		<!-- end headerlinks -->
	</div> 
	<!-- end header -->

	<!-- start footer -->
	<div id="footer">
	<p id="legal">Powered by &copy;2007 - <%= Date.today.year %>My Mate CMS. <br/>
		All Rights Reserved. | Designed by <a 
		href="http://www.swezin.com/">Swe Zin</a></p>
	</div>
	<!-- end footer -->
</div> 
<!-- end container -->

<% end %>
</body> 
</html> 

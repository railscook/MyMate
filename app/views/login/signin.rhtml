<font size="16">Please login</font>
<% form_tag({:controller => 'login', :action => 'login'}, {:id => "login_form"}) do %> 
<fieldset> 
 <label for="user_login">Login:</label> <br/>
 <%= text_field :user, :login -%> <br/>
 <label for="user_password">Password:</label><br/> 
 <%= password_field :user, :password -%> <br/><br/>
 <%= submit_tag "Login >>" %> <br/><br/>

 <small>
  <%= link_to "Have not signed up yet?", "/login/signup"%>
 </small>
 
<% end %> 
</fieldset> 

